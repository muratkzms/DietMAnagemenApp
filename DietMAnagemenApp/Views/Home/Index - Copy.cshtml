<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danışanlar
    </div>
    <div class="card-body">
        <table id="clientsTableHome">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ad Soyad</th>
                    <th>Hakkında</th>
                    <th>Doğum T.</th>

                    <th>Ağırlık(kg)</th>
                    <th>Boy(cm)</th>
                    <th>Oluşturma T.</th>
                    <th>Güncelleme T.</th>
                    <th>Oluşturan</th>
                    <th>Güncelleyen</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Ad Soyad</th>
                    <th>Hakkında</th>
                    <th>Doğum T.</th>

                    <th>Ağırlık(kg)</th>
                    <th>Boy(cm)</th>
                    <th>Oluşturma T.</th>
                    <th>Güncelleme T.</th>
                    <th>Oluşturan</th>
                    <th>Güncelleyen</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                    <tr>
                        <td>@client.Id</td>
                        <td>@client.Fullname</td>
                        <td>@client.About</td>
                        <td>@client.DateOfBirth</td>
                        <td>@client.Weight</td>
                        <td>@client.Height</td>
                        <td>@client.CreatedDate</td>
                        <td>@client.ModifiedDate</td>
                        <td>@client.CreatedByName</td>
                        <td>@client.ModifiedByName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/homeIndex.js" type="application/ecmascript"></script>
}